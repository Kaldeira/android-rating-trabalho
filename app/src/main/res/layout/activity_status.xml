<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:text="@string/avalie_o_jogo_abaixo" />

    <LinearLayout
        android:id="@+id/layoutFoto"
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="18dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagem_jogo"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/counter"
            tools:ignore="InefficientWeight" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/rtbvotacao"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutFoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="69dp"
        android:numStars="4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutFoto"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="290dp"
        android:text="Seu Voto:" />

    <TextView
        android:id="@+id/tvstatus"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/rtbvotacao"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="256dp"
        android:text="@string/status" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#3F51B5"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="AvaliacÃ£o Jogos e Games"
        app:titleTextColor="@color/white" />

</RelativeLayout>